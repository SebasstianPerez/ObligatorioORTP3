@model DTOs.DTOs.Envio.DTOEnvio

<h2>¿Estás seguro de que quieres finalizar este envío?</h2>

<p>
    <strong>Tipo de Envío:</strong> @Model.Tipo<br />
    <strong>Cliente:</strong> @Model.ClienteEmail<br />
    <strong>Tracking:</strong> @Model.NumeroTracking<br />
    <strong>Peso:</strong> @Model.Peso<br />
    <strong>Estado Actual:</strong> @Model.Estado<br />
</p>

@using (Html.BeginForm("FinalizarConfirmacion", "Envio", new { id = Model.Id }, FormMethod.Post))
{
    <input type="submit" value="Finalizar" class="btn btn-danger" />
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
}
